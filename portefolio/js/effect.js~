$(document).ready(function(){

	var menuHover = function(id) {
		$(id).hover(	
			function() {
				$(id).removeClass('animation-down');
				$(this).addClass('animation-up');
			}, function() {
				$(id).removeClass('animation-up');
				$(this).addClass('animation-down');
			}
		);
	};
	menuHover($('.menu-emplacement'));
});
